<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:gravity="center"
    android:padding="20dp">

    <EditText
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/personicon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_person_pin_black_24dp"
        android:enabled="false"/>

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/field_email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/field_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field_email1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <CheckBox
        android:layout_centerHorizontal="true"
        android:id="@+id/cb"
        android:layout_below="@+id/field_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:buttonTint="#FFFFFF"
        android:checked="true"
        android:text="Remember Me"
        android:textColor="#FFFFFF" />


    <Button
        android:onClick="onClick"
        android:layout_below="@+id/cb"
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapelogin"/>

    <Button
        android:onClick="onClick"
        android:layout_below="@+id/btnlogin"
        android:id="@+id/btnregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapesignup"
        android:textColor="#FFFFFF"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnregister"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme.WhiteAccent"
        android:visibility="gone"/>




</RelativeLayout>